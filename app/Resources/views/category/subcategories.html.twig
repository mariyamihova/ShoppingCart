{% extends 'base.html.twig' %}

{% block body_id %}

{% endblock %}

{% block main %}
    <h3>All sub-categories in category <strong>{{ category.name }}</strong></h3>
    <hr>
    <div class="row">
        {% if subcategories | length >0 %}
        {% for subcat in subcategories %}
            <div class="col-md-4">
                    <div class="thumbnail" >
                        <img style="height: 75px" src="{{ asset('images/'~ subcat.getImageName ~'') }}" alt="{{ subcat.name  }}">
                    </div>
                <span class="pull-left"> All products in this category: {{ subcat.products|length }}</span><br>
                <a href="{{ path("products_by_category", {"id": subcat.id} )}}">{{ subcat.name }}</a>
            </div>
        {% endfor %}
        {% else %}
            <h3>Sorry, currently there aren't any sub-categories in this category :( </h3>
        {% endif %}
    </div>
    <h3>All products in category <strong>{{ category.name }}</strong></h3>
    <hr>
    <div class="col-md-4">
        {% if category.products | length > 0%}
        {% for key,product in category.products %}
            <header>
                <h2>{{ product.name }}</h2>
            </header>
            <div class="thumbnail" >
                <img style="height: 250px" src="{{ asset('images/'~ product.imageName ~'') }}" alt="{{ product.name }}">
            </div>
            {% if product.seller %}
                <hr>
                <p class="bg-primary img-responsive">Seller: {{ product.seller.fullName }}</p>
            {% endif %}
            <small class="text-left">
                {{ product.category.name }}
            </small>
            <p class="text-left" style="color: #0e6f5c;"><strong>PRICE: â‚¬ {{ product.price }}</strong></p>
            <footer>
                <a class="btn btn-default"
                   href="{{ path('view_product',{'id':product.id}) }}">Read more &raquo;</a>
                {% if app.user %}
                    <form method="post" action="{{ path('user_cart_add', {'id': product.id}) }}"
                          style="display: inline-block">
                        <button class="btn btn-success" type="submit"> Add to Cart
                        </button>
                    </form>
                {% else %}
                    <form method="post" action="{{ path('security_login') }}"
                          style="display: inline-block">
                        <button class="btn btn-success" type="submit"> Add to Cart
                        </button>
                    </form>
                {% endif %}
            </footer>
            {% endfor %}
            </div>
            {% else %}
                <h3>There aren't any products in the main category. Check out the sub-categories! </h3>
            {% endif %}



{% endblock %}

