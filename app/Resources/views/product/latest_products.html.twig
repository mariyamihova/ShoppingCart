{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <h3>These are our latest products. Don't wait, order now!</h3>
        <hr>
        {% if products|length > 0 %}
        {% for product in products %}
            <div class="col-md-4">
                <article>
                    <header>
                        <h2>{{ product.name }}</h2>
                    </header>
                    <div class="thumbnail" >
                        <img style="height: 250px" src="{{ asset(product.imageUrl) }}" alt="{{ product.name }}">
                    </div>
                    {% if product.seller %}
                        <hr>
                        <p class="bg-primary img-responsive">Seller: {{ product.seller.fullName }}</p>
                    {% endif %}
                    <div class="text-left">
                        In stock:{{ product.quantity }}
                    </div>
                    <div class="text-left">
                        {{ product.category.name }}
                    </div>
                    <p class="text-left" style="color: #0e6f5c;"><strong>PRICE: â‚¬ {{ product.price }}</strong></p>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default"
                               href="{{ path('view_product',{'id':product.id}) }}">Read more &raquo;</a>
                        </div>
                        {% if app.user %}
                            <form method="post" action="{{ path('user_cart_add', {'id': product.id}) }}"
                                  style="display: inline-block">
                                <button class="btn btn-success" type="submit"> Add to Cart
                                </button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('security_login') }}"
                                  style="display: inline-block">
                                <button class="btn btn-success" type="submit"> Add to Cart
                                </button>
                            </form>
                        {% endif %}
                    </footer>
                </article>
            </div>
        {% endfor %}
        {% else %}
        <h3>Sorry, there are no new products. ;( </h3>
        {% endif %}
    </div>
{% endblock %}

