{% extends 'base.html.twig' %}

{% block main_title %}Products{% endblock %}

{% block main %}
    <div class="well">
        <h3>All shop products</h3>
        <hr>
        <div class="text-left">
            <a href="{{ path('admin_add_product') }}" class="btn btn-success btn-xs">Add new product</a>
        </div>
        <hr>
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Priority</th>
                <th>Price</th>
                <th>Seller</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.category }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.priority }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.seller }}</td>
                    <td>
                        <a href="{{ path('admin_edit_product', {'id': product.id}) }}" class="btn btn-warning btn-xs">Edit</a>
                    </td>
                    <td>
                        <form action="{{ path('admin_delete_product', {'id': product.id}) }}" method="post">
                            <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                        </form>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navigation text-center" >
        {{ knp_pagination_render(products) }}
    </div>
{% endblock %}